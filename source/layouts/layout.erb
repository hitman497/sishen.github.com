<html class="no-js" lang="<%= data.site.lang %>">
  <!--<![endif]-->
  <head>
    <meta charset="UTF-8">

    <title>
      <%= yield_content(:title).blank? ? data.site.title :  yield_content(:title).chomp.strip + '| ' + data.site.title %>
    </title>
    <link type="application/opensearchdescription+xml" href="opensearch.xml" title="Yedingding Blog" rel="search" />
    <meta name="description" content="<%= yield_content(:description).blank? ? data.site.description.chomp.strip : yield_content(:description)  %>">
    <meta name="keywords" content="<%= yield_content(:keywords).blank? ? data.site.keywords.join(',') : yield_content(:keywords).chomp.strip %>">
    <meta name="author" content="<%= data.site.author %>">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="cleartype" content="on">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
